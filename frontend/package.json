{
  "name": "frontend",
  "version": "0.0.0",
  "private": true,
  "main": "electron/main.cjs",
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "format": "prettier --write --experimental-cli src/",
    "watch:css": "npx @tailwindcss/cli -i ./input.css -o ./public/output.css --watch",
    "build:css": "npx @tailwindcss/cli -i ./input.css -o ./public/output.css",
    "electron:dev": "concurrently \"pnpm watch:css\" \"pnpm dev\" \"wait-on http://localhost:5174 && electron .\"",
    "electron:build": "pnpm build:css && pnpm build && electron-builder"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.23",
    "@heroicons/vue": "^2.2.0",
    "@tailwindcss/vite": "^4.1.18",
    "axios": "^1.13.2",
    "pinia": "^3.0.4",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@tsconfig/node24": "^24.0.3",
    "@types/node": "^24.10.4",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitejs/plugin-vue-jsx": "^5.1.3",
    "@vue/tsconfig": "^0.8.1",
    "concurrently": "^9.2.1",
    "electron": "^40.5.0",
    "electron-builder": "^26.8.1",
    "npm-run-all2": "^8.0.4",
    "prettier": "3.7.4",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vue-tsc": "^3.2.1",
    "wait-on": "^9.0.4"
  },
  "build": {
    "appId": "com.lingchat.scripteditor",
    "productName": "LingChat Script Editor",
    "directories": {
      "output": "app-release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend/dist/ScriptEditorAPI.exe",
        "to": "backend/ScriptEditorAPI.exe"
      }
    ],
    "extraFiles": [
      {
        "from": "../backend/scripts",
        "to": "scripts"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
